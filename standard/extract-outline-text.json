{
  "urn": {
    "tags": {
      "action": "extract_outline",
      "ext": "text",
      "in": "content-type: text/plain; profile=https://capns.org/schema/utf8-text",
      "out": "content-type: application/json; profile=https://capns.org/schema/document-outline"
    }
  },
  "command": "extract-outline",
  "title": "Extract Text Document Outline",
  "cap_description": "Extract document outline/table of contents from text files",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "file_path",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Path to the text file to process",
        "cli_flag": "file_path",
        "position": 0,
        "validation": {
          "pattern": "^[^\\0]+$",
          "min_length": 1
        }
      }
    ],
    "optional": [
      {
        "name": "max_depth",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/int",
        "arg_description": "Maximum outline depth to extract (1-10)",
        "cli_flag": "--max-depth",
        "validation": {
          "min": 1,
          "max": 10
        }
      },
      {
        "name": "include_order_indexes",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/bool",
        "arg_description": "Include page numbers in the outline",
        "cli_flag": "--include-order-indexes",
        "default_value": true
      },
      {
        "name": "output",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Write output to specified file instead of stdout",
        "cli_flag": "--output",
        "validation": {
          "pattern": "^[^\\0]+$"
        }
      }
    ]
  },
  "output": {
    "media_spec": "content-type: application/json; profile=https://capns.org/schemas/obj",
    "output_description": "Structured document outline with hierarchical entries"
  }
}
{
  "urn": {
    "tags": {
      "op": "codegeneration",
      "language": "en",
      "type": "constrained",
      "in": "capns:ms:str.v1",
      "out": "capns:llm_inference-output.v1"
    }
  },
  "command": "llm_inference",
  "title": "Generate Code in English",
  "cap_description": "Code generation and programming tasks in English",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "prompt",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Code generation prompt or specification",
        "cli_flag": "--prompt",
        "position": 0,
        "validation": {
          "min_length": 1,
          "max_length": 16384
        }
      }
    ],
    "optional": [
      {
        "name": "language",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Programming language for code generation",
        "cli_flag": "--language",
        "default_value": "rust",
        "validation": {
          "allowed_values": [
            "rust",
            "python",
            "javascript",
            "typescript",
            "go",
            "java",
            "c",
            "cpp",
            "swift",
            "kotlin",
            "sql",
            "shell",
            "html",
            "css",
            "json",
            "yaml",
            "toml"
          ]
        }
      },
      {
        "name": "context",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Existing code context or codebase information",
        "cli_flag": "--context",
        "validation": {
          "max_length": 65536
        }
      },
      {
        "name": "style",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Coding style or framework preferences",
        "cli_flag": "--style",
        "validation": {
          "max_length": 4096
        }
      },
      {
        "name": "max_tokens",
        "media_spec": "capns:ms:num.v1",
        "arg_description": "Maximum tokens for generated code",
        "cli_flag": "--max-tokens",
        "default_value": 4096,
        "validation": {
          "min": 100,
          "max": 8192
        }
      },
      {
        "name": "include_tests",
        "media_spec": "capns:ms:bool.v1",
        "arg_description": "Whether to include unit tests",
        "cli_flag": "--include-tests",
        "default_value": false
      },
      {
        "name": "include_comments",
        "media_spec": "capns:ms:bool.v1",
        "arg_description": "Whether to include code comments",
        "cli_flag": "--include-comments",
        "default_value": true
      },
      {
        "name": "model_spec",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Model spec to use for code generation",
        "cli_flag": "--model-spec",
        "default_value": "hf:MaziyarPanahi/Mistral-7B-Instruct-v0.3-GGUF?include=*Q8_0*,*.json&exclude=*IQ1*,*IQ2*,*IQ3*,*Q2*,*Q3*",
        "validation": {
          "pattern": ".*:.*",
          "min_length": 4,
          "max_length": 512
        }
      }
    ]
  },
  "output": {
    "media_spec": "capns:llm_inference-output.v1",
    "output_description": "Generated code with optional tests and documentation"
  }
}
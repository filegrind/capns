{
  "urn": {
    "tags": {
      "action": "embedding",
      "language": "en",
      "type": "constrained"
    }
  },
  "command": "llm_inference",
  "cap_description": "Generate semantic embeddings for English text",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "text",
        "arg_type": "string",
        "arg_description": "Text to generate embeddings for",
        "cli_flag": "--text",
        "position": 0,
        "validation": {
          "min_length": 1,
          "max_length": 8192
        }
      }
    ],
    "optional": [
      {
        "name": "normalize",
        "arg_type": "boolean",
        "arg_description": "Whether to normalize the embedding vectors",
        "cli_flag": "--normalize",
        "default_value": true
      },
      {
        "name": "pooling_type",
        "arg_type": "string",
        "arg_description": "Pooling strategy for embedding generation",
        "cli_flag": "--pooling-type",
        "default_value": "mean",
        "validation": {
          "allowed_values": [
            "mean",
            "cls",
            "last",
            "max"
          ]
        }
      }
    ]
  },
  "output": {
    "output_type": "object",
    "output_description": "Dense vector embedding representation with metadata",
    "content_type": "application/json",
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "embedding": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Dense vector representation of the input"
        },
        "dimensions": {
          "type": "integer",
          "minimum": 1,
          "description": "Dimensionality of the embedding vector"
        },
        "input_text": {
          "type": "string",
          "description": "Original text that was embedded"
        },
        "model_used": {
          "type": "string",
          "description": "Model that generated the embedding"
        },
        "processing_time_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Processing time in milliseconds"
        },
        "token_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tokens in input"
        },
        "similarity_norm": {
          "type": "string",
          "enum": [
            "l2",
            "cosine",
            "dot"
          ],
          "description": "Recommended similarity measure"
        }
      },
      "required": [
        "embedding",
        "dimensions"
      ]
    }
  }
}
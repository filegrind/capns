{
  "urn": {
    "tags": {
      "action": "extract_metadata",
      "ext": "txt",
      "in": "content-type: text/plain; profile=https://capns.org/schema/utf8-text",
      "out": "content-type: application/json; profile=https://capns.org/schema/file-metadata"
    }
  },
  "command": "extract-metadata",
  "title": "Extract Text Document Metadata",
  "cap_description": "Extract text document metadata including title, file size, word count, and other properties",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "file_path",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Path to the text file to process",
        "cli_flag": "file_path",
        "position": 0,
        "validation": {
          "pattern": "^[^\\0]+$",
          "min_length": 1
        }
      }
    ],
    "optional": [
      {
        "name": "output",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Write output to specified file instead of stdout",
        "cli_flag": "--output",
        "validation": {
          "pattern": "^[^\\0]+$"
        }
      }
    ]
  },
  "output": {
    "media_spec": "content-type: application/json; profile=https://capns.org/schemas/obj",
    "output_description": "Structured metadata including file properties and text-specific metadata"
  }
}
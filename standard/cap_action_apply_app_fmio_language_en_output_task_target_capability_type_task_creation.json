{
  "urn": {
    "tags": {
      "app": "fmio",
      "action": "apply",
      "target": "capability",
      "output": "task",
      "language": "en",
      "type": "task_creation"
    }
  },
  "command": "apply_capability_task",
  "title": "Create Apply Capability Task",
  "category": "FMIO",
  "cap_description": "Create a task to apply a specific capability to a listing",
  "metadata": {},
  "accepts_stdin": false,
  "arguments": {
    "required": [
      {
        "name": "cap_urn",
        "arg_type": "string",
        "arg_description": "URN of the capability to apply",
        "cli_flag": "--cap-urn",
        "validation": {
          "min_length": 1,
          "max_length": 512
        }
      },
      {
        "name": "listing_id",
        "arg_type": "string",
        "arg_description": "ID of the listing to apply capability to",
        "cli_flag": "--listing-id",
        "validation": {
          "pattern": "[0-9a-f-]{36}"
        }
      },
      {
        "name": "tracked_file_id",
        "arg_type": "string",
        "arg_description": "ID of the tracked file associated with the listing",
        "cli_flag": "--tracked-file-id",
        "validation": {
          "pattern": "[0-9a-f-]{36}"
        }
      }
    ]
  },
  "output": {
    "output_type": "object",
    "output_description": "Created task information",
    "content_type": "application/json",
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "task_id": {
          "type": "string",
          "description": "ID of the created task"
        },
        "task_type": {
          "type": "string",
          "description": "Type of task created"
        }
      },
      "required": [
        "task_id",
        "task_type"
      ]
    }
  }
}
{
  "urn": {
    "tags": {
      "op": "generate_thumbnail",
      "in": "media:type=void;v=1",
      "out": "media:type=binary;v=1;binary"
    }
  },
  "command": "generate-thumbnail",
  "title": "Generate Thumbnail",
  "cap_description": "Generate a thumbnail image preview of the file",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "file_path",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Path to the document file to process",
        "cli_flag": "file_path",
        "position": 0,
        "validation": {
          "pattern": "^[^\\0]+$",
          "min_length": 1
        }
      }
    ],
    "optional": [
      {
        "name": "width",
        "media_urn": "media:type=integer;v=1;textable;numeric;scalar",
        "arg_description": "Width of the thumbnail in pixels",
        "cli_flag": "--width",
        "default_value": 200,
        "validation": {
          "min": 50,
          "max": 2000
        }
      },
      {
        "name": "height",
        "media_urn": "media:type=integer;v=1;textable;numeric;scalar",
        "arg_description": "Height of the thumbnail in pixels",
        "cli_flag": "--height",
        "default_value": 300,
        "validation": {
          "min": 50,
          "max": 2000
        }
      },
      {
        "name": "index_range",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Index Range to generate thumbnails from (1-based).",
        "cli_flag": "--index-range",
        "default_value": "1",
        "validation": {
          "pattern": "^\\d+(-\\d*)?$"
        }
      },
      {
        "name": "output_file",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Write thumbnail to specified file instead of stdout",
        "cli_flag": "--output",
        "validation": {
          "pattern": "\\.(png|jpg|jpeg)$"
        }
      }
    ]
  },
  "output": {
    "media_urn": "media:type=binary;v=1;binary",
    "output_description": "PNG image data representing a thumbnail of the document"
  }
}
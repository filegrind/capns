{
  "urn": {
    "tags": {
      "action": "multiplechoice",
      "language": "en",
      "type": "constrained",
      "media_spec": "content-type: text/plain; profile=https://capns.org/schema/prompt-text"
    }
  },
  "command": "llm_inference",
  "title": "Answer Multiple Choice in English",
  "cap_description": "Logical reasoning and binary decision tasks in English",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "query",
        "arg_type": "string",
        "arg_description": "Logical query or decision problem",
        "cli_flag": "--query",
        "position": 0,
        "validation": {
          "min_length": 1,
          "max_length": 16384
        }
      }
    ],
    "optional": [
      {
        "name": "context",
        "arg_type": "string",
        "arg_description": "Context and facts for logical reasoning",
        "cli_flag": "--context",
        "validation": {
          "max_length": 32768
        }
      },
      {
        "name": "decision_type",
        "arg_type": "string",
        "arg_description": "Type of logical decision required",
        "cli_flag": "--decision-type",
        "default_value": "binary",
        "validation": {
          "allowed_values": [
            "binary",
            "classification",
            "reasoning",
            "verification",
            "comparison"
          ]
        }
      },
      {
        "name": "max_tokens",
        "arg_type": "number",
        "arg_description": "Maximum tokens for reasoning output",
        "cli_flag": "--max-tokens",
        "default_value": 1000,
        "validation": {
          "min": 10,
          "max": 4096
        }
      },
      {
        "name": "require_explanation",
        "arg_type": "boolean",
        "arg_description": "Whether to include reasoning explanation",
        "cli_flag": "--require-explanation",
        "default_value": true
      },
      {
        "name": "model_spec",
        "arg_type": "string",
        "arg_description": "Model spec to use for decision making",
        "cli_flag": "--model-spec",
        "default_value": "hf:MaziyarPanahi/Mistral-7B-Instruct-v0.3-GGUF?include=*Q8_0*,*.json&exclude=*IQ1*,*IQ2*,*IQ3*,*Q2*,*Q3*",
        "validation": {
          "pattern": ".*:.*",
          "min_length": 4,
          "max_length": 512
        }
      }
    ]
  },
  "output": {
    "output_type": "object",
    "output_description": "Logical decision with reasoning explanation and confidence",
    "content_type": "application/json",
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "decision": {
          "type": "string",
          "description": "The logical decision or choice made"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for the decision"
        },
        "reasoning": {
          "type": "string",
          "description": "Explanation of the reasoning process"
        },
        "decision_type": {
          "type": "string",
          "enum": [
            "binary",
            "classification",
            "reasoning",
            "verification",
            "comparison"
          ],
          "description": "Type of decision made"
        },
        "evidence": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Key evidence points used"
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tokens consumed"
        },
        "model_used": {
          "type": "string",
          "description": "Model that made the decision"
        }
      },
      "required": [
        "decision",
        "confidence"
      ]
    }
  }
}
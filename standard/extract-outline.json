{
  "urn": {
    "tags": {
      "action": "extract_outline",
      "ext": "pdf",
      "in": "content-type: application/pdf; profile=https://capns.org/schema/pdf-document",
      "out": "content-type: application/json; profile=https://capns.org/schema/document-outline"
    }
  },
  "command": "extract-outline",
  "title": "Extract Document Outline",
  "cap_description": "Extract document outline/table of contents with hierarchical structure",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "file_path",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Path to the document file to process",
        "cli_flag": "file_path",
        "position": 0,
        "validation": {
          "pattern": "^[^\\0]+$",
          "min_length": 1
        }
      }
    ],
    "optional": [
      {
        "name": "max_depth",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/int",
        "arg_description": "Maximum outline depth to extract (1-10)",
        "cli_flag": "--max-depth",
        "validation": {
          "min": 1,
          "max": 10
        }
      },
      {
        "name": "include_order_indexes",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/bool",
        "arg_description": "Include page numbers in the outline (default: true)",
        "cli_flag": "--include-order-indexes",
        "default_value": true
      },
      {
        "name": "output",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Write output to specified file instead of stdout",
        "cli_flag": "--output",
        "validation": {
          "pattern": "^[^\\0]+$"
        }
      }
    ]
  },
  "output": {
    "media_spec": "content-type: application/json; profile=https://capns.org/schemas/obj",
    "output_description": "Hierarchical document outline with section titles and optional page numbers",
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source_file": {
          "type": "string",
          "minLength": 1,
          "description": "Source file path"
        },
        "document_type": {
          "type": "string",
          "description": "Document format/type (PDF, EPUB, etc.)"
        },
        "total_pages": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of pages/sections in document"
        },
        "entries": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/OutlineEntry"
          },
          "description": "Root-level outline entries"
        },
        "has_outline": {
          "type": "boolean",
          "description": "Whether this document has any outline/bookmarks"
        },
        "extraction_info": {
          "$ref": "#/$defs/ExtractionInfo",
          "description": "Metadata about the extraction process"
        },
        "document_title": {
          "type": [
            "string",
            "null"
          ],
          "description": "Document title (from metadata if available)"
        }
      },
      "required": [
        "source_file",
        "document_type",
        "total_pages",
        "entries",
        "has_outline",
        "extraction_info"
      ],
      "$defs": {
        "OutlineEntry": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "title": {
              "type": "string",
              "minLength": 1,
              "description": "The title/label of this outline entry"
            },
            "level": {
              "type": "integer",
              "minimum": 0,
              "description": "Hierarchical level (0 = top level, 1 = first sublevel, etc.)"
            },
            "page": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 1,
              "description": "Page/section number this entry points to (1-indexed)"
            },
            "source_ref": {
              "type": [
                "string",
                "null"
              ],
              "description": "Optional source reference (filename, anchor, etc.)"
            },
            "children": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/OutlineEntry"
              },
              "description": "Child entries under this one"
            }
          },
          "required": [
            "title",
            "level",
            "children"
          ]
        },
        "ExtractionInfo": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "extractor_name": {
              "type": "string",
              "description": "Tool that performed the extraction"
            },
            "extractor_version": {
              "type": "string",
              "description": "Version of the extraction tool"
            },
            "extracted_at": {
              "type": [
                "string",
                "null"
              ],
              "description": "Timestamp of extraction"
            },
            "warnings": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Any warnings or notes about the extraction"
            }
          },
          "required": [
            "extractor_name",
            "extractor_version",
            "warnings"
          ]
        }
      }
    }
  }
}
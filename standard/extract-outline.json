{
  "urn": {
    "tags": {
      "action": "extract",
      "target": "outline",
      "ext": "pdf"
    }
  },
  "version": "1.0.0",
  "command": "extract-outline",
  "cap_description": "Extract document outline/table of contents with hierarchical structure",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "file_path",
        "arg_type": "string",
        "arg_description": "Path to the document file to process",
        "cli_flag": "file_path",
        "position": 0,
        "validation": {
          "pattern": "^[^\\0]+$",
          "min_length": 1
        }
      }
    ],
    "optional": [
      {
        "name": "max_depth",
        "arg_type": "integer",
        "arg_description": "Maximum outline depth to extract (1-10)",
        "cli_flag": "--max-depth",
        "validation": {
          "min": 1,
          "max": 10
        }
      },
      {
        "name": "include_page_numbers",
        "arg_type": "boolean",
        "arg_description": "Include page numbers in the outline (default: true)",
        "cli_flag": "--include-page-numbers",
        "default_value": true
      },
      {
        "name": "output",
        "arg_type": "string",
        "arg_description": "Write output to specified file instead of stdout",
        "cli_flag": "--output",
        "validation": {
          "pattern": "^[^\\0]+$"
        }
      }
    ]
  },
  "output": {
    "output_type": "object",
    "output_description": "Hierarchical document outline with section titles and optional page numbers",
    "schema_ref": "document-outline.json",
    "content_type": "application/json"
  }
}
{
  "urn": {
    "tags": {
      "op": "summarization",
      "language": "en",
      "type": "constrained",
      "in": "media:type=string;v=1;textable;scalar",
      "out": "media:type=llm-inference-output;v=1;textable;keyed"
    }
  },
  "command": "llm_inference",
  "title": "Summarize in English",
  "cap_description": "Document and text summarization in English",
  "metadata": {},
  "media_specs": {
    "media:type=llm-inference-output;v=1;textable;keyed": {
      "media_type": "application/json",
      "profile_uri": "https://capns.org/schema/llm_inference-output",
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "summary": {
            "type": "string",
            "minLength": 1,
            "description": "The generated summary text"
          },
          "summary_type": {
            "type": "string",
            "enum": [
              "extractive",
              "abstractive",
              "bullet_points",
              "executive",
              "detailed",
              "brief"
            ],
            "description": "Type of summary generated"
          },
          "compression_ratio": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Ratio of summary length to original length"
          },
          "original_length": {
            "type": "integer",
            "minimum": 0,
            "description": "Length of original text in characters"
          },
          "summary_length": {
            "type": "integer",
            "minimum": 0,
            "description": "Length of summary in characters"
          },
          "key_points": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Extracted key points from the text"
          },
          "tokens_used": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of tokens consumed for generation"
          },
          "model_used": {
            "type": "string",
            "description": "Model that generated the summary"
          },
          "generation_time_ms": {
            "type": "integer",
            "minimum": 0,
            "description": "Generation time in milliseconds"
          },
          "focus_area": {
            "type": "string",
            "description": "Focus area that was applied"
          }
        },
        "required": [
          "summary",
          "summary_type",
          "compression_ratio"
        ]
      }
    }
  },
  "stdin": "media:type=string;v=1;textable;scalar",
  "arguments": {
    "required": [
      {
        "name": "text",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Text content to summarize",
        "cli_flag": "--text",
        "position": 0,
        "validation": {
          "min_length": 100,
          "max_length": 131072
        }
      }
    ],
    "optional": [
      {
        "name": "summary_type",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Type of summary to generate",
        "cli_flag": "--summary-type",
        "default_value": "abstractive",
        "validation": {
          "allowed_values": [
            "extractive",
            "abstractive",
            "bullet_points",
            "executive",
            "detailed",
            "brief"
          ]
        }
      },
      {
        "name": "length",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Desired summary length",
        "cli_flag": "--length",
        "default_value": "medium",
        "validation": {
          "allowed_values": [
            "brief",
            "medium",
            "detailed",
            "comprehensive"
          ]
        }
      },
      {
        "name": "focus",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Summary focus area",
        "cli_flag": "--focus",
        "default_value": "main_points",
        "validation": {
          "allowed_values": [
            "main_points",
            "key_facts",
            "conclusions",
            "methodology",
            "results",
            "implications",
            "overview"
          ]
        }
      },
      {
        "name": "context",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Additional context for summarization",
        "cli_flag": "--context",
        "validation": {
          "max_length": 8192
        }
      },
      {
        "name": "max_tokens",
        "media_urn": "media:type=number;v=1;textable;numeric;scalar",
        "arg_description": "Maximum tokens for summary output",
        "cli_flag": "--max-tokens",
        "default_value": 1000,
        "validation": {
          "min": 50,
          "max": 4096
        }
      },
      {
        "name": "preserve_structure",
        "media_urn": "media:type=boolean;v=1;textable;scalar",
        "arg_description": "Whether to preserve document structure",
        "cli_flag": "--preserve-structure",
        "default_value": false
      },
      {
        "name": "model_spec",
        "media_urn": "media:type=string;v=1;textable;scalar",
        "arg_description": "Model spec to use for summarization",
        "cli_flag": "--model-spec",
        "default_value": "hf:MaziyarPanahi/Mistral-7B-Instruct-v0.3-GGUF?include=*Q8_0*,*.json&exclude=*IQ1*,*IQ2*,*IQ3*,*Q2*,*Q3*",
        "validation": {
          "pattern": ".*:.*",
          "min_length": 4,
          "max_length": 512
        }
      }
    ]
  },
  "output": {
    "media_urn": "media:type=llm-inference-output;v=1;textable;keyed",
    "output_description": "Summary with metadata including compression metrics"
  }
}
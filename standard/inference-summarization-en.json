{
  "urn": {
    "tags": {
      "action": "summarization",
      "language": "en",
      "type": "unconstrained"
    }
  },
  "version": "1.0.0",
  "command": "llm_inference",
  "cap_description": "Document and text summarization in English",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "text",
        "arg_type": "string",
        "arg_description": "Text content to summarize",
        "cli_flag": "--text",
        "position": 0,
        "validation": {
          "min_length": 100,
          "max_length": 131072
        }
      }
    ],
    "optional": [
      {
        "name": "summary_type",
        "arg_type": "string",
        "arg_description": "Type of summary to generate",
        "cli_flag": "--summary-type",
        "default_value": "abstractive",
        "validation": {
          "allowed_values": [
            "extractive",
            "abstractive",
            "bullet_points",
            "executive",
            "detailed",
            "brief"
          ]
        }
      },
      {
        "name": "length",
        "arg_type": "string",
        "arg_description": "Desired summary length",
        "cli_flag": "--length",
        "default_value": "medium",
        "validation": {
          "allowed_values": [
            "brief",
            "medium",
            "detailed",
            "comprehensive"
          ]
        }
      },
      {
        "name": "focus",
        "arg_type": "string",
        "arg_description": "Summary focus area",
        "cli_flag": "--focus",
        "default_value": "main_points",
        "validation": {
          "allowed_values": [
            "main_points",
            "key_facts",
            "conclusions",
            "methodology",
            "results",
            "implications",
            "overview"
          ]
        }
      },
      {
        "name": "context",
        "arg_type": "string",
        "arg_description": "Additional context for summarization",
        "cli_flag": "--context",
        "validation": {
          "max_length": 8192
        }
      },
      {
        "name": "max_tokens",
        "arg_type": "number",
        "arg_description": "Maximum tokens for summary output",
        "cli_flag": "--max-tokens",
        "default_value": 1000,
        "validation": {
          "min": 50,
          "max": 4096
        }
      },
      {
        "name": "preserve_structure",
        "arg_type": "boolean",
        "arg_description": "Whether to preserve document structure",
        "cli_flag": "--preserve-structure",
        "default_value": false
      }
    ]
  },
  "output": {
    "output_type": "object",
    "output_description": "Summary with metadata including compression metrics",
    "content_type": "application/json"
  }
}
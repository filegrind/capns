{
  "urn": {
    "tags": {
      "op": "summarization",
      "language": "en",
      "type": "constrained",
      "in": "capns:ms:str.v1",
      "out": "capns:llm_inference-output.v1"
    }
  },
  "command": "llm_inference",
  "title": "Summarize in English",
  "cap_description": "Document and text summarization in English",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "text",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Text content to summarize",
        "cli_flag": "--text",
        "position": 0,
        "validation": {
          "min_length": 100,
          "max_length": 131072
        }
      }
    ],
    "optional": [
      {
        "name": "summary_type",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Type of summary to generate",
        "cli_flag": "--summary-type",
        "default_value": "abstractive",
        "validation": {
          "allowed_values": [
            "extractive",
            "abstractive",
            "bullet_points",
            "executive",
            "detailed",
            "brief"
          ]
        }
      },
      {
        "name": "length",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Desired summary length",
        "cli_flag": "--length",
        "default_value": "medium",
        "validation": {
          "allowed_values": [
            "brief",
            "medium",
            "detailed",
            "comprehensive"
          ]
        }
      },
      {
        "name": "focus",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Summary focus area",
        "cli_flag": "--focus",
        "default_value": "main_points",
        "validation": {
          "allowed_values": [
            "main_points",
            "key_facts",
            "conclusions",
            "methodology",
            "results",
            "implications",
            "overview"
          ]
        }
      },
      {
        "name": "context",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Additional context for summarization",
        "cli_flag": "--context",
        "validation": {
          "max_length": 8192
        }
      },
      {
        "name": "max_tokens",
        "media_spec": "capns:ms:num.v1",
        "arg_description": "Maximum tokens for summary output",
        "cli_flag": "--max-tokens",
        "default_value": 1000,
        "validation": {
          "min": 50,
          "max": 4096
        }
      },
      {
        "name": "preserve_structure",
        "media_spec": "capns:ms:bool.v1",
        "arg_description": "Whether to preserve document structure",
        "cli_flag": "--preserve-structure",
        "default_value": false
      },
      {
        "name": "model_spec",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Model spec to use for summarization",
        "cli_flag": "--model-spec",
        "default_value": "hf:MaziyarPanahi/Mistral-7B-Instruct-v0.3-GGUF?include=*Q8_0*,*.json&exclude=*IQ1*,*IQ2*,*IQ3*,*Q2*,*Q3*",
        "validation": {
          "pattern": ".*:.*",
          "min_length": 4,
          "max_length": 512
        }
      }
    ]
  },
  "output": {
    "media_spec": "capns:llm_inference-output.v1",
    "output_description": "Summary with metadata including compression metrics"
  }
}
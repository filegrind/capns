{
  "urn": {
    "tags": {
      "action": "generate_frontmatter_summary",
      "language": "en",
      "type": "constrained",
      "in": "content-type: text/plain; profile=https://capns.org/schema/utf8-text",
      "out": "content-type: application/json; profile=https://capns.org/schema/frontmatter-summary"
    }
  },
  "command": "generate_text",
  "title": "Summarize Frontmatter",
  "cap_description": "Extract and organize bibliographic information from book frontmatter text",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "frontmatter_text",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Frontmatter text to process and summarize",
        "cli_flag": "--frontmatter-text",
        "position": 0,
        "validation": {
          "min_length": 50,
          "max_length": 131072
        }
      }
    ],
    "optional": [
      {
        "name": "format",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Output format for the summary",
        "cli_flag": "--format",
        "default_value": "organized",
        "validation": {
          "allowed_values": [
            "organized",
            "structured",
            "compact",
            "detailed"
          ]
        }
      },
      {
        "name": "preserve_all_data",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/bool",
        "arg_description": "Whether to preserve all factual information",
        "cli_flag": "--preserve-all-data",
        "default_value": true
      },
      {
        "name": "remove_boilerplate",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/bool",
        "arg_description": "Whether to remove legal boilerplate and formatting chips",
        "cli_flag": "--remove-boilerplate",
        "default_value": true
      },
      {
        "name": "language",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Language of the frontmatter text",
        "cli_flag": "--language",
        "default_value": "en",
        "validation": {
          "allowed_values": [
            "en",
            "es",
            "fr",
            "de",
            "it",
            "pt",
            "ru",
            "zh",
            "ja",
            "ko"
          ]
        }
      },
      {
        "name": "max_tokens",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/num",
        "arg_description": "Maximum tokens for summary output",
        "cli_flag": "--max-tokens",
        "default_value": 2000,
        "validation": {
          "min": 100,
          "max": 8192
        }
      },
      {
        "name": "model_spec",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Model spec to use for summary generation",
        "cli_flag": "--model-spec",
        "default_value": "hf:MaziyarPanahi/Mistral-7B-Instruct-v0.3-GGUF?include=*Q8_0*,*.json&exclude=*IQ1*,*IQ2*,*IQ3*,*Q2*,*Q3*",
        "validation": {
          "pattern": ".*:.*",
          "min_length": 4,
          "max_length": 512
        }
      }
    ]
  },
  "output": {
    "media_spec": "content-type: application/json; profile=https://capns.org/schemas/obj",
    "output_description": "Organized bibliographic summary with extracted metadata",
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "summary": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10000,
          "description": "Organized summary of the frontmatter content"
        }
      },
      "required": [
        "summary"
      ]
    }
  }
}
{
  "urn": {
    "tags": {
      "op": "scan_files",
      "type": "task_creation",
      "in": "media:type=file-path-array;v=1",
      "out": "media:type=task-id;v=1"
    }
  },
  "command": "scan_files_task",
  "title": "Create Files Scan Task",
  "cap_description": "Create a task to scan a specific list of files",
  "metadata": {},
  "media_specs": {
    "media:type=file-path-array;v=1": {
      "media_type": "application/json",
      "profile_uri": "https://filegrind.com/schema/file-path-array",
      "schema": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "minItems": 1,
        "maxItems": 1000,
        "description": "Array of file paths to scan"
      }
    },
    "media:type=task-id;v=1": {
      "media_type": "application/json",
      "profile_uri": "https://capns.org/schema/scan_files_task-output",
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "task_id": {
            "type": "string",
            "description": "ID of the created task"
          },
          "task_type": {
            "type": "string",
            "description": "Type of task created"
          }
        },
        "required": [
          "task_id",
          "task_type"
        ]
      }
    }
  },
  "accepts_stdin": false,
  "arguments": {
    "required": [
      {
        "name": "file_paths",
        "media_urn": "media:type=file-path-array;v=1",
        "arg_description": "Array of file paths to scan",
        "cli_flag": "--file-paths"
      }
    ]
  },
  "output": {
    "media_urn": "media:type=task-id;v=1",
    "output_description": "Created task information"
  }
}
{
  "urn": {
    "tags": {
      "op": "generate_thumbnail",
      "in": "media:type=md;v=1;textable",
      "out": "media:type=png;v=1;binary"
    }
  },
  "command": "generate-thumbnail",
  "title": "Generate Markdown Thumbnail",
  "cap_description": "Generate a thumbnail image preview of the markdown document",
  "metadata": {},
  "args": [
    {
      "media_urn": "media:type=file-path;v=1;textable;scalar",
      "required": true,
      "sources": [
        {
          "stdin": "media:type=md;v=1;textable"
        },
        {
          "position": 0
        }
      ],
      "arg_description": "Path to the markdown file to process",
      "validation": {
        "pattern": "^[^\\0]+$",
        "min_length": 1
      }
    },
    {
      "media_urn": "media:type=thumbnail-width;v=1;textable;numeric;scalar",
      "required": false,
      "sources": [
        {
          "cli_flag": "--width"
        }
      ],
      "arg_description": "Width of the thumbnail in pixels",
      "validation": {
        "min": 50,
        "max": 2000
      },
      "default_value": 200
    },
    {
      "media_urn": "media:type=thumbnail-height;v=1;textable;numeric;scalar",
      "required": false,
      "sources": [
        {
          "cli_flag": "--height"
        }
      ],
      "arg_description": "Height of the thumbnail in pixels",
      "validation": {
        "min": 50,
        "max": 2000
      },
      "default_value": 300
    },
    {
      "media_urn": "media:type=output-path;v=1;textable;scalar",
      "required": false,
      "sources": [
        {
          "cli_flag": "--output"
        }
      ],
      "arg_description": "Write thumbnail to specified file instead of stdout",
      "validation": {
        "pattern": "\\.(png|jpg|jpeg)$"
      }
    }
  ],
  "output": {
    "media_urn": "media:type=png;v=1;binary",
    "output_description": "PNG image data representing a thumbnail of the markdown document"
  }
}
{
  "urn": {
    "tags": {
      "action": "generate_thumbnail",
      "ext": "rst",
      "in": "content-type: text/x-rst; profile=https://capns.org/schema/rst-document",
      "out": "content-type: image/png; profile=https://capns.org/schema/thumbnail-image"
    }
  },
  "command": "generate-thumbnail",
  "title": "Generate RST Thumbnail",
  "cap_description": "Generate a thumbnail image preview of the RST document",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "file_path",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Path to the RST file to process",
        "cli_flag": "file_path",
        "position": 0,
        "validation": {
          "pattern": "^[^\\0]+$",
          "min_length": 1
        }
      }
    ],
    "optional": [
      {
        "name": "width",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/int",
        "arg_description": "Width of the thumbnail in pixels",
        "cli_flag": "--width",
        "default_value": 200,
        "validation": {
          "min": 50,
          "max": 2000
        }
      },
      {
        "name": "height",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/int",
        "arg_description": "Height of the thumbnail in pixels",
        "cli_flag": "--height",
        "default_value": 300,
        "validation": {
          "min": 50,
          "max": 2000
        }
      },
      {
        "name": "output_file",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Write thumbnail to specified file instead of stdout",
        "cli_flag": "--output",
        "validation": {
          "pattern": "\\.(png|jpg|jpeg)$"
        }
      }
    ]
  },
  "output": {
    "media_spec": "content-type: application/octet-stream",
    "output_description": "PNG image data representing a thumbnail of the RST document"
  }
}
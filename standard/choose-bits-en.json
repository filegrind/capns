{
  "urn": {
    "tags": {
      "action": "choose_bits",
      "language": "en",
      "type": "constrained",
      "in": "content-type: text/plain; profile=https://capns.org/schema/utf8-text",
      "out": "content-type: application/json; profile=https://capns.org/schema/booleans-result"
    }
  },
  "command": "bit_choices",
  "title": "Make Multiple Choices",
  "cap_description": "Make multiple binary (yes/no, true/false) decisions based on content and multiple questions",
  "metadata": {},
  "accepts_stdin": true,
  "arguments": {
    "required": [
      {
        "name": "content",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Content to analyze for the binary decisions",
        "cli_flag": "--content",
        "position": 0,
        "validation": {
          "min_length": 1,
          "max_length": 65536
        }
      },
      {
        "name": "questions",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str-array",
        "arg_description": "Array of binary questions to answer about the content",
        "cli_flag": "--questions",
        "position": 1,
        "schema": {
          "type": "array",
          "minItems": 1,
          "maxItems": 50,
          "items": {
            "type": "string",
            "minLength": 5,
            "maxLength": 4096,
            "description": "A binary question to answer about the content"
          }
        }
      }
    ],
    "optional": [
      {
        "name": "language",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Language code for processing",
        "cli_flag": "--language",
        "default_value": "en",
        "validation": {
          "allowed_values": [
            "en",
            "es",
            "fr",
            "de",
            "it",
            "pt",
            "ru",
            "zh",
            "ja",
            "ko"
          ]
        }
      },
      {
        "name": "max_content_length",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/num",
        "arg_description": "Maximum content length to consider (for context window management)",
        "cli_flag": "--max-content-length",
        "default_value": 2048,
        "validation": {
          "min": 256,
          "max": 131072
        }
      },
      {
        "name": "confidence_threshold",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/num",
        "arg_description": "Minimum confidence threshold for decisions",
        "cli_flag": "--confidence-threshold",
        "default_value": 0.7,
        "validation": {
          "min": 0,
          "max": 1
        }
      },
      {
        "name": "model_spec",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "Model spec to use for decision making",
        "cli_flag": "--model-spec",
        "default_value": "hf:MaziyarPanahi/Mistral-7B-Instruct-v0.3-GGUF?include=*Q8_0*,*.json&exclude=*IQ1*,*IQ2*,*IQ3*,*Q2*,*Q3*",
        "validation": {
          "pattern": ".*:.*",
          "min_length": 4,
          "max_length": 512
        }
      }
    ]
  },
  "output": {
    "media_spec": "content-type: application/json; profile=https://capns.org/schemas/obj",
    "output_description": "Multiple binary decision results with boolean array",
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "type": "boolean"
          },
          "minItems": 1,
          "maxItems": 50,
          "description": "Array of boolean results corresponding to each question"
        }
      },
      "required": [
        "results"
      ]
    }
  }
}
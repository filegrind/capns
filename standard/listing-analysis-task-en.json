{
  "urn": {
    "tags": {
      "action": "request_listing_analysis",
      "language": "en",
      "type": "task_creation",
      "in": "content-type: text/plain; profile=https://filegrind.com/schema/listing-id",
      "out": "content-type: text/plain; profile=https://filegrind.com/schema/task-chain-id"
    }
  },
  "command": "listing_analysis_task",
  "title": "Create Listing Analysis Task Chain",
  "cap_description": "Create a complete analysis task chain for a listing (first glance → annotation pass → close read → deep dive)",
  "metadata": {},
  "accepts_stdin": false,
  "arguments": {
    "required": [
      {
        "name": "listing_id",
        "media_spec": "content-type: application/json; profile=https://capns.org/schemas/str",
        "arg_description": "ID of the listing to analyze",
        "cli_flag": "--listing-id",
        "validation": {
          "pattern": "[0-9a-f-]{36}"
        }
      }
    ]
  },
  "output": {
    "media_spec": "content-type: application/json; profile=https://capns.org/schemas/obj",
    "output_description": "Information about the created task chain",
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "listing_id": {
          "type": "string",
          "description": "ID of the listing being analyzed"
        },
        "task_type": {
          "type": "string",
          "description": "Type of task chain created"
        }
      },
      "required": [
        "listing_id",
        "task_type"
      ]
    }
  }
}
{
  "urn": {
    "tags": {
      "op": "management",
      "type": "model"
    }
  },
  "command": "manage",
  "title": "Manage Model",
  "cap_description": "General model management operations including installation, configuration and lifecycle",
  "metadata": {},
  "accepts_stdin": false,
  "arguments": {
    "required": [
      {
        "name": "operation",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Management operation to perform",
        "cli_flag": "--operation",
        "position": 0,
        "validation": {
          "allowed_values": [
            "init",
            "config",
            "validate",
            "cleanup",
            "info"
          ]
        }
      }
    ],
    "optional": [
      {
        "name": "model",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Model identifier or path",
        "cli_flag": "--model",
        "validation": {
          "pattern": "^[^\\0]+$"
        }
      },
      {
        "name": "format",
        "media_spec": "capns:ms:str.v1",
        "arg_description": "Output format for information display",
        "cli_flag": "--format",
        "default_value": "json",
        "validation": {
          "allowed_values": [
            "json",
            "text",
            "yaml"
          ]
        }
      }
    ]
  },
  "output": {
    "media_spec": "capns:manage-output.v1",
    "output_description": "Management operation result with status and details"
  }
}